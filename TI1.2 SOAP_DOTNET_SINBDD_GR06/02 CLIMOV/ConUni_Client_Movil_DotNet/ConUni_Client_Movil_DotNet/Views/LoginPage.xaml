<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConUni_Client_Movil_DotNet.Views.LoginPage"
             BackgroundColor="#1a1a2e"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="30" 
                           Spacing="20" 
                           VerticalOptions="Center">

            <!-- Logo/Icono -->
            <Frame CornerRadius="100"
                   WidthRequest="120"
                   HeightRequest="120"
                   Padding="0"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   BorderColor="#16213e">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0f3460" Offset="0.0" />
                        <GradientStop Color="#16213e" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>

                <Label Text="游댢"
                       FontSize="60"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- T칤tulo -->
            <Label Text="CONVERSOR"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>

            <Label Text="Sistema de Conversi칩n de Unidades"
                   FontSize="14"
                   TextColor="#94a3b8"
                   HorizontalTextAlignment="Center"
                   Margin="0,-10,0,20"/>

            <!-- Frame del formulario -->
            <Frame CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="#16213e"
                   BackgroundColor="#16213e">

                <VerticalStackLayout Spacing="15">

                    <!-- Usuario -->
                    <Label Text="Usuario"
                           TextColor="#94a3b8"
                           FontSize="14"/>

                    <Frame Padding="0"
                           CornerRadius="10"
                           BorderColor="#0f3460"
                           BackgroundColor="#0f3460"
                           HasShadow="False">
                        <Entry x:Name="EntryUsuario"
                               Placeholder="Ingrese su usuario"
                               PlaceholderColor="#64748b"
                               TextColor="White"
                               BackgroundColor="Transparent"
                               Margin="10,0"/>
                    </Frame>

                    <!-- Contrase침a -->
                    <Label Text="Contrase침a"
                           TextColor="#94a3b8"
                           FontSize="14"
                           Margin="0,10,0,0"/>

                    <Frame Padding="0"
                           CornerRadius="10"
                           BorderColor="#0f3460"
                           BackgroundColor="#0f3460"
                           HasShadow="False">
                        <Entry x:Name="EntryPassword"
                               Placeholder="Ingrese su contrase침a"
                               PlaceholderColor="#64748b"
                               TextColor="White"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="10,0"/>
                    </Frame>

                    <!-- Credenciales de prueba -->
                    <Frame CornerRadius="10"
                           Padding="10"
                           BorderColor="#065f46"
                           BackgroundColor="#064e3b"
                           Margin="0,10,0,0">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="游눠 Credenciales de prueba:"
                                   TextColor="#6ee7b7"
                                   FontSize="12"/>
                            <Label Text="Usuario: MONSTER"
                                   TextColor="#a7f3d0"
                                   FontSize="11"/>
                            <Label Text="Contrase침a: MONSTER9"
                                   TextColor="#a7f3d0"
                                   FontSize="11"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Mensaje de error -->
                    <Label x:Name="LabelError"
                           TextColor="#ef4444"
                           FontSize="12"
                           IsVisible="False"
                           HorizontalTextAlignment="Center"/>

                    <!-- Bot칩n Login -->
                    <Button x:Name="BtnLogin"
                            Text="INICIAR SESI칍N"
                            Clicked="BtnLogin_Clicked"
                            Margin="0,20,0,0"
                            HeightRequest="50"
                            CornerRadius="10"
                            FontAttributes="Bold">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#e94560" Offset="0.0" />
                                <GradientStop Color="#c2185b" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <!-- Indicador de carga -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                     IsRunning="False"
                                     IsVisible="False"
                                     Color="#e94560"
                                     HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Footer -->
            <Label Text="v1.0 - Grupo 06"
                   TextColor="#64748b"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>