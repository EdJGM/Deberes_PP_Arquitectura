<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConUni_Client_Movil_DotNet.Views.TemperaturaPage"
             Title="Conversión de Temperatura"
             BackgroundColor="#1a1a2e">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header con icono -->
            <Frame CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="Transparent">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#dc2626" Offset="0.0" />
                        <GradientStop Color="#b91c1c" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>

                <HorizontalStackLayout Spacing="15">
                    <Label Text="🌡️"
                           FontSize="48"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="5">
                        <Label Text="TEMPERATURA"
                               TextColor="White"
                               FontSize="24"
                               FontAttributes="Bold"/>
                        <Label Text="6 conversiones disponibles"
                               TextColor="#fecaca"
                               FontSize="12"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <!-- Formulario de conversión -->
            <Frame CornerRadius="20"
                   Padding="20"
                   BackgroundColor="#16213e"
                   BorderColor="#0f3460"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <!-- Valor de entrada -->
                    <Label Text="Valor a convertir"
                           TextColor="#94a3b8"
                           FontSize="14"/>

                    <Frame Padding="0"
                           CornerRadius="10"
                           BorderColor="#0f3460"
                           BackgroundColor="#0f3460">
                        <Entry x:Name="EntryValor"
                               Placeholder="Ingrese el valor"
                               PlaceholderColor="#64748b"
                               TextColor="White"
                               Keyboard="Numeric"
                               BackgroundColor="Transparent"
                               Margin="15,0"
                               TextChanged="EntryValor_TextChanged"/>
                    </Frame>

                    <!-- Unidad origen -->
                    <Label Text="De (unidad origen)"
                           TextColor="#94a3b8"
                           FontSize="14"
                           Margin="0,10,0,0"/>

                    <Frame Padding="0"
                           CornerRadius="10"
                           BorderColor="#0f3460"
                           BackgroundColor="#0f3460">
                        <Picker x:Name="PickerOrigen"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                Margin="10,0"
                                SelectedIndexChanged="OnConversionChanged">
                            <Picker.Items>
                                <x:String>Celsius (°C)</x:String>
                                <x:String>Fahrenheit (°F)</x:String>
                                <x:String>Kelvin (K)</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>

                    <!-- Unidad destino -->
                    <Label Text="A (unidad destino)"
                           TextColor="#94a3b8"
                           FontSize="14"
                           Margin="0,10,0,0"/>

                    <Frame Padding="0"
                           CornerRadius="10"
                           BorderColor="#0f3460"
                           BackgroundColor="#0f3460">
                        <Picker x:Name="PickerDestino"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                Margin="10,0"
                                SelectedIndexChanged="OnConversionChanged">
                            <Picker.Items>
                                <x:String>Celsius (°C)</x:String>
                                <x:String>Fahrenheit (°F)</x:String>
                                <x:String>Kelvin (K)</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>

                    <!-- Botón convertir -->
                    <Button x:Name="BtnConvertir"
                            Text="CONVERTIR"
                            Clicked="BtnConvertir_Clicked"
                            Margin="0,20,0,0"
                            HeightRequest="50"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            BackgroundColor="#dc2626"
                            TextColor="White"/>

                    <!-- Indicador de carga -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                     IsRunning="False"
                                     IsVisible="False"
                                     Color="#dc2626"
                                     HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Resultado -->
            <Frame x:Name="FrameResultado"
                   CornerRadius="20"
                   Padding="25"
                   IsVisible="False"
                   HasShadow="True"
                   BorderColor="Transparent">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#16a34a" Offset="0.0" />
                        <GradientStop Color="#15803d" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>

                <VerticalStackLayout Spacing="10">
                    <Label Text="✓ RESULTADO"
                           TextColor="#bbf7d0"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Label x:Name="LabelResultado"
                           TextColor="White"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Label x:Name="LabelUnidadResultado"
                           TextColor="#d1fae5"
                           FontSize="16"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>